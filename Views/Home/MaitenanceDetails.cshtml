@{
}

@model MaitenanceTask

<h1>@Model.Title</h1>
<p>Description: @Model.Notes</p>
<p>Unit: @Model.Unit.UnitId</p>

@if (Model.IsCompleted == true)
            {
                <p>COMPLETED</p>
            } else
            {
                <p>NOT COMPLETED</p>
            }
<br/>
<a class="btn btn-primary" href="@Url.Action("AllTasks", "Home")">Back to All Tasks</a>